{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,
    "rootDirs": ["./src"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["lib", "node_modules"],
  "include": [
    "./src"
  ]
}
